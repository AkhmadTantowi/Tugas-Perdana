<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tugas Perdana"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBiru"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:text="2"
                    android:textSize="30dp"
                    android:background="@color/colorBiru1"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:text="3"
                    android:textSize="30dp"
                    android:background="@color/colorBiru2"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:text="4"
                    android:textSize="30dp"
                    android:background="@color/colorHijaut"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:text="5"
                    android:textSize="30dp"
                    android:background="@color/colorKuning"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:text="6"
                    android:textSize="30dp"
                    android:background="@color/colorHijaut"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:text="7"
                    android:textSize="30dp"
                    android:background="@color/colorMenujuOrange"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:text="8"
                    android:textSize="30dp"
                    android:background="@color/colorBiru1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:text="9"
                    android:textSize="30dp"
                    android:background="@color/colorKuning"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:text="10"
                    android:textSize="30dp"
                    android:background="@color/colorKuning1"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>